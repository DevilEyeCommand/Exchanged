generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model provinces {
    id              Int     @id @default(autoincrement())
    code            Int?
    name_in_thai    String? @db.VarChar(100)
    name_in_english String? @db.VarChar(100)
}

model districts {
    id              Int     @id @default(autoincrement())
    code            Int?
    name_in_thai    String? @db.VarChar(100)
    name_in_english String? @db.VarChar(100)
    province_id     Int?
}

model subdistricts {
    id              Int     @id @default(autoincrement())
    code            Int?
    name_in_thai    String? @db.VarChar(100)
    name_in_english String? @db.VarChar(100)
    latitude        Float?
    longitude       Float?
    district_id     Int?
    zip_code        Int?
}
